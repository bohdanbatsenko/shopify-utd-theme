{% schema %}
{
  "name": "Best Sellers",
  "settings": [
    {
      "type": "text",
      "id": "section_label",
      "label": "Section Label"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "collection_title",
          "label": "Collection Title"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Best Sellers",
      "category": "Custom"
    }
  ],
  "max_blocks": 3
}
{% endschema %}

<div class="best-sellers">
  {% assign has_configured_collections = false %}
  {% for block in section.blocks %}
    {% if block.settings.collection %}
      {% assign has_configured_collections = true %}
      {% break %}
    {% endif %}
  {% endfor %}

  <div class="best-sellers__header">
    <h2 class="best-sellers__label">{{ section.settings.section_label }}</h2>
    <h3 class="best-sellers__title">{{ section.settings.title }}</h3>
  </div>
  <div class="best-sellers__content">
    <div class="best-sellers__collections">
      <div class="best-sellers__collections-inner">
        <div class="best-sellers__collections-title">
          <p>Best sellers</p>
          <h2>Trending Products</h2>
        </div>
        <div class="best-sellers__collections-list">
          {% if has_configured_collections %}
            {% assign collection_index = 0 %}
            {% for block in section.blocks %}
              {% assign collection = block.settings.collection %}
              {% if collection %}
                {% assign collection_index = collection_index | plus: 1 %}
                <div class="best-sellers__collection {% if collection_index == 1 %}best-sellers__collection--active{% endif %}" data-collection-index="{{ collection_index | minus: 1 }}">
                  <span class="best-sellers__collection-name">{{ block.settings.collection_title | default: collection.title }}</span>
                  <span class="best-sellers__collection-arrow">→</span>
                </div>
              {% endif %}
            {% endfor %}
          {% else %}
            {% assign collection_index = 0 %}
            {% for collection in collections %}
              {% if collection.products_count > 0 %}
                {% assign collection_index = collection_index | plus: 1 %}

                  <div class="best-sellers__collection {% if collection_index == 1 %}best-sellers__collection--active{% endif %}" data-collection-index="{{ collection_index | minus: 1 }}">
                    <span class="best-sellers__collection-name">{{ collection.title }}</span>
                    <span class="best-sellers__collection-arrow">→</span>
                  </div>

                {% if collection_index == 3 %}
                  {% break %}
                {% endif %}
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>
    <div class="best-sellers__product">
      {% if has_configured_collections %}
        {% assign product_index = 0 %}
        {% for block in section.blocks %}
          {% assign collection = block.settings.collection %}
          {% if collection %}
            {% assign product = block.settings.product %}
            {% if product == blank %}
              {% assign product = collection.products.first %}
            {% endif %}
            {% assign product_index = product_index | plus: 1 %}
            <div class="best-sellers__product-content {% if product_index == 1 %}best-sellers__product-content--active{% endif %}" data-product-index="{{ product_index | minus: 1 }}">
              {% if product %}
                {% assign product_variant = product.selected_or_first_available_variant %}
                <div class="best-sellers__product-image">
                  <a href="{{ product.url }}">
                    <picture>
                      <source srcset="{{ product.featured_image | image_url: width: 300, height: 300 }} 1x, {{ product.featured_image | image_url: width: 600, height: 600 }} 2x" media="(min-width: 768px)">
                      <img src="{{ product.featured_image | image_url: width: 150, height: 150 }}" alt="{{ product.title | escape }}" width="150" height="150">
                    </picture>
                  </a>
                  <div class="best-sellers__tags">
                    {% for tag in product.tags limit: 3 %}
                      <span class="best-sellers__tag {% if tag == 'Sale' %}best-sellers__tag--sale{% endif %}">{{ tag }}</span>
                    {% endfor %}
                  </div>
                  <div class="best-sellers__actions">
                    <button class="best-sellers__wishlist-button" data-product-name="{{ product.title }}">
                      {{ 'heart.svg' | inline_asset_content }}
                    </button>
                    <button class="best-sellers__cart-button" data-product-id="{{ product_variant.id }}" {% if product.available == false %}disabled{% endif %}>
                      {{ 'eye.svg' | inline_asset_content }}
                    </button>
                  </div>
                </div>
                <div class="best-sellers__product-info">
                  <a href="{{ product.url }}">
                    <span class="best-sellers__product-name">{{ product.title }}</span>
                  </a>
                  <span class="best-sellers__product-price">{{ product.price | money }}</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="best-sellers__product-price--old">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </div>
              {% else %}
                <p>No product available.</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
        {% assign product_index = 0 %}
        {% for collection in collections %}
          {% if collection.products_count > 0 %}
            {% assign product = collection.products.first %}
            {% assign product_index = product_index | plus: 1 %}
            <div class="best-sellers__product-content {% if product_index == 1 %}best-sellers__product-content--active{% endif %}" data-product-index="{{ product_index | minus: 1 }}">
              {% if product %}
                {% assign product_variant = product.selected_or_first_available_variant %}
                <div class="best-sellers__product-image">
                  <a href="{{ product.url }}">
                    <picture>
                      <source srcset="{{ product.featured_image | image_url: width: 300, height: 300 }} 1x, {{ product.featured_image | image_url: width: 600, height: 600 }} 2x" media="(min-width: 768px)">
                      <img src="{{ product.featured_image | image_url: width: 150, height: 150 }}" alt="{{ product.title | escape }}" width="150" height="150">
                    </picture>
                  </a>
                  <div class="best-sellers__tags">
                    {% for tag in product.tags limit: 3 %}
                      <span class="best-sellers__tag {% if tag == 'Sale' %}best-sellers__tag--sale{% endif %}">{{ tag }}</span>
                    {% endfor %}
                  </div>
                  <div class="best-sellers__actions">
                    <button class="best-sellers__wishlist-button" data-product-name="{{ product.title }}">
                      {{ 'heart.svg' | inline_asset_content }}
                    </button>
                    <button class="best-sellers__cart-button" data-product-id="{{ product_variant.id }}" {% if product.available == false %}disabled{% endif %}>
                      {{ 'eye.svg' | inline_asset_content }}
                    </button>
                  </div>
                </div>
                <div class="best-sellers__product-info">
                  <a href="{{ product.url }}">
                    <span class="best-sellers__product-name">{{ product.title }}</span>
                  </a>
                  <span class="best-sellers__product-price">{{ product.price | money }}</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="best-sellers__product-price--old">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </div>
              {% else %}
                <p>No product available.</p>
              {% endif %}
            </div>
            {% if product_index == 3 %}
              {% break %}
            {% endif %}
          {% endif %}
        {% endfor %}
      {% endif %}

      {% if product_index == 0 %}
        <p>No products available.</p>
      {% endif %}
    </div>
  </div>
</div>



